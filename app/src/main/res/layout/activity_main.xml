<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.main.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:background="@drawable/bk_main">

        <ImageView
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_alignParentLeft="true"
            android:adjustViewBounds="true"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_marginLeft="@dimen/_16sdp"
            android:src="@drawable/my_list_help_accepted_back" />

        <ImageView
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:adjustViewBounds="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:src="@drawable/my_list_help_accepted_nav_add" />


        <LinearLayout
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_32sdp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/bk_main_tap"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_others"
                android:layout_width="0dp"
                android:layout_height="@dimen/_36sdp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:fontFamily="@font/tajawal_medium"
                android:gravity="center"
                android:text="@string/others"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/tv_fazaaty"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/bk_button"
                android:fontFamily="@font/tajawal_medium"
                android:gravity="center"
                android:text="@string/fazaaty"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_12ssp" />
        </LinearLayout>


    </RelativeLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_24sdp"
        android:layout_marginTop="@dimen/_60sdp"
        android:layout_marginEnd="@dimen/_24sdp"
        app:tabMode="fixed"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorColor="@color/blue"
        app:tabTextColor="@color/colorPrimaryDark"
        app:tabSelectedTextColor="@color/blue"
        android:background="@drawable/bk_main_tap" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_120sdp" />

</RelativeLayout>